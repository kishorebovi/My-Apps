<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">
    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:background="@drawable/xyz"
        tools:context="com.example.kishore.windowstheme.MainActivity">

        <Button
            android:onClick="switchToGreet"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/greet"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btnGreet" />

        <Button
            android:text="Button"
            android:onClick="switchToSimpleCalci"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/calci"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_toRightOf="@+id/btnGreet"
            android:layout_toEndOf="@+id/btnGreet"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:id="@+id/btnSimpleCalci" />

        <Button
            android:onClick="switchToAlgoBenchmark"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/algobenchmark"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btnAlgoBenchmark"
            android:layout_below="@+id/btnGreet"
            android:layout_marginTop="15dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toLeftOf="@+id/btnSimpleCalci"
            android:layout_toStartOf="@+id/btnSimpleCalci" />

        <Button
            android:onClick="switchToToast"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/toast"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/btnAlgoBenchmark"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:id="@+id/btnToast" />

        <Button
            android:onClick="switchToSMS"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/smss"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/btnSMS"
            android:layout_alignBaseline="@+id/btnAlgoBenchmark"
            android:layout_alignBottom="@+id/btnAlgoBenchmark"
            android:layout_alignLeft="@+id/btnSimpleCalci"
            android:layout_alignStart="@+id/btnSimpleCalci" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/tbWIFI"
            android:layout_alignTop="@+id/btnToast"
            android:layout_alignLeft="@+id/btnSMS"
            android:layout_alignStart="@+id/btnSMS" />

        <Button
            android:onClick="notify"
            android:background="@android:color/transparent"
            android:drawableTop="@drawable/notifications"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_below="@+id/btnToast"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="15dp"
            android:id="@+id/btnNotify" />

        <Button
            android:onClick="fbLogin"
            android:drawableTop="@drawable/fblogin"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/button"
            android:layout_alignTop="@+id/btnNotify"
            android:layout_alignLeft="@+id/tbWIFI"
            android:layout_alignStart="@+id/tbWIFI" />

    </RelativeLayout>
</ScrollView>